</div>

@section StyleSheet {
    <link rel="stylesheet" type="text/css" href="~/lib/jquery.gritter/css/jquery.gritter.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/owl.carousel/owl.carousel.css" />
