@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@{
    ViewData["Title"] = Localizer["Home"];
    ViewData["NoSideBarLeft"] = true;

    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
}

@section TopHeaderMenu {
    <a class="be-toggle-top-header-menu" aria-expanded="true" href="#" data-toggle="collapse" data-target="#be-navbar-collapse">@Localizer["Menu"]</a>
    <div class="navbar-collapse collapse in" id="be-navbar-collapse" aria-expanded="true">
        <ul class="nav navbar-nav">
            <li><a asp-area="" asp-controller="Game" asp-action="Index"><span>@Localizer["Play"]</span></a></li>
        </ul>
    </div>
}

<div class="container">
    <div class="col-md-4" style="text-align: center;">
        <img alt="Xp" src="~/images/Game/xp.svg" style="height: 140px;">
        <h3>@Localizer["Become the Strongest!"]</h3>
        <p>@Localizer["Coach your character through a multitude of quests and fights in an epic adventure. Or your courage will be tested severely."]</p>
    </div>

    <div class="col-md-4" style="text-align: center;">
        <img alt="Gold" src="~/images/Game/gold.svg" style="height: 140px;">
