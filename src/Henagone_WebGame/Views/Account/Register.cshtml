@model RegisterViewModel
@{
    ViewData["Title"] = @Localizer["Sign Up"];
}

<div id="registerDiv" class="splash-container sign-up">
    <div class="panel panel-default panel-border-color panel-border-color-primary">
        <div class="panel-heading"><img src="~/images/logo-xx.png" alt="logo" height="27" class="logo-img"><span class="splash-description">@Localizer["Please enter your user information."]</span></div>
        <div class="panel-body">
            <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <span class="splash-title xs-pb-20">@Localizer["Sign Up"]</span>
                <div asp-validation-summary="All" data-valmsg-summary="true" class="alert alert-danger">
                    <ul>
                        <li style="display: none;"></li>
                    </ul>
                </div>

                <div class="form-group">
                    <input asp-for="UserName" type="text" required placeholder="@Localizer["Username"]" autocomplete="off" class="form-control">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                 </div>
                <div class="form-group">
                    <input asp-for="Email" type="email" required placeholder="@Localizer["E-mail"]" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group row signup-password">
                    <div class="col-xs-6">
                        <input asp-for="Password" required placeholder="@Localizer["Password"]" class="form-control">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-xs-6">
                        <input asp-for="ConfirmPassword" required placeholder="@Localizer["Confirm"]" class="form-control">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group xs-pt-10">
                    <div class="be-checkbox" style="margin-top: 6px;">
                        <input asp-for="AcceptTerms" />
                        <label for="AcceptTerms">@Localizer["By creating an account, you agree the"] <a asp-controller="CGU" asp-action="Index" target="_blank">@Localizer["Terms and conditions"]</a>.</label>
                    </div>
                    <span asp-validation-for="AcceptTerms" class="text-danger"></span>
                </div>

                <div class="form-group xs-pt-10">
                    <button type="submit" class="btn btn-block btn-primary btn-xl">@Localizer["Sign Up"]</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
