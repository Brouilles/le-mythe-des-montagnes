@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = Localizer["Log in"];
}

<div id="loginDiv" class="splash-container">
    <div class="panel panel-default panel-border-color panel-border-color-primary">
        <div class="panel-heading"><img src="~/images/logo-xx.png" alt="logo" height="27" class="logo-img"><span class="splash-description">@Localizer["Please enter your user information."]</span></div>
        <div class="panel-body">
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div asp-validation-summary="All" data-valmsg-summary="true" class="alert alert-danger">
                    <ul>
                        <li style="display: none;"></li>
                    </ul>
                </div>

                <div class="form-group">
                    <input asp-for="UserName" placeholder="@Localizer["Username"]" autocomplete="off" class="form-control">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" placeholder="@Localizer["Password"]" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group row login-tools">
                    <div class="col-xs-6 login-remember">
                        <div class="be-checkbox">
                            <input asp-for="RememberMe" />
                            <label for="RememberMe">@Localizer["Remember me?"] </label>
                        </div>
                    </div>
                    <div class="col-xs-6 login-forgot-password"><a asp-action="ForgotPassword">@Localizer["Forgot your password?"]</a></div>
                </div>
                <div class="form-group login-submit">
                    <button data-dismiss="modal" type="submit" class="btn btn-primary btn-xl">@Localizer["Log in"]</button>
                </div>
            </form>
        </div>
    </div>
    <div class="splash-footer"><span>@Localizer["Don't have an account?"] <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">@Localizer["Sign Up"]</a></span></div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}